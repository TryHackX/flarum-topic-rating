{
    "name": "tryhackx/flarum-topic-rating",
    "description": "5-star topic rating system for Flarum discussions",
    "keywords": ["flarum", "rating", "stars", "discussion"],
    "type": "flarum-extension",
    "license": "MIT",
    "require": {
        "php": "^8.2",
        "flarum/core": "^1.2"
    },
    "authors": [
        {
            "name": "TryHackX",
            "homepage": "https://github.com/TryHackX"
        }
    ],
    "autoload": {
        "psr-4": {
            "TryHackX\\TopicRating\\": "src/"
        }
    },
    "extra": {
        "flarum-extension": {
            "title": "Topic Rating",
            "icon": {
                "name": "fas fa-star",
                "backgroundColor": "#f0ad4e",
                "color": "#fff"
            }
        }
    }
}
